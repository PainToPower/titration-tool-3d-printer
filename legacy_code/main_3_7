from controller import Controller


def main():
    controller = Controller()
    controller.connect_to_port("COM15")
    controller.send_and_receive("M302 P1") #disable hot print
    controller.send_and_receive("M92 E82")
    
    controller.send_and_receive("G90") #setting absolute coordination

    
    
    controller.send_and_receive("G28")
    
    #controller.send_and_receive("G0 X40 Y145 Z90")
    
    userFactor = int(input("User enter diluted factor: "))
    userNoSample = int(input( "User enter the number of samples: "))
    
    controller.buffer_move(userFactor, userNoSample)
    #controller.fecth_buffer()
    
    #controller.mixing()
    #controller.serial_dilution(userFactor, userNoSample)
    
    #controller.testing()
    
    
            

if __name__ == "__main__":
    main()
